<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/newsViewPagerTab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_defaultTabBackground="@color/lite_default_color"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/white_color"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_defaultTabTextSize="14sp"
        app:stl_distributeEvenly="false"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="1dp"
        app:stl_indicatorAlwaysInCenter="true"
        app:stl_indicatorColor="@color/default_color"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="45dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/newsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newsViewPagerTab" />


</LinearLayout>