<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/bg_shape"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageDisplayView"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout android:id="@+id/commonLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/default_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/desTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>